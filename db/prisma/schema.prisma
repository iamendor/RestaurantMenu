generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}


model Etel {
  id Int @id @default(autoincrement())
  name String @unique
  
  allergenek AllergenOnEtel[]
  menuk EtelOnMenu[]
}

model Allergen{
  id Int @id @default(autoincrement())
  name String @unique 

  etelek AllergenOnEtel[]
}

model Menu{
  id Int @id @default(autoincrement())
  date DateTime
  letter String
  etelek EtelOnMenu[]
}

model EtelOnMenu{
  etel Etel @relation(fields: [etelId], references: [id])
  etelId Int

  meunk Menu @relation(fields: [menuId], references: [id])
  menuId Int

  @@id([etelId, menuId])

}

model AllergenOnEtel{
  etel Etel @relation(fields: [etelId], references: [id])
  etelId Int

  allergen Allergen @relation(fields: [allergenId], references: [id])
  allergenId Int

  @@id([etelId, allergenId])
}

